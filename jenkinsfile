pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/707751/python_project.git'
            }
        }
        stage('Setup') {
            steps {
                sh 'python3 -m venv venv'
                sh 'chmod +x venv/bin/activate'
                sh './venv/bin/activate'
            }
        }
        stage('Test') {
            steps {
                sh './venv/bin/activate' && pytest'
            }
        }
    }
}

