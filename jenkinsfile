pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'git@github.com:707751/python_project.git'
            }
        }
        stage('Setup') {
            steps {
                sh 'python -m venv venv'
                sh 'source venv/bin/activate && pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'source venv/bin/activate && pytest'
            }
        }
    }
}

